package com.alnton.myframe.db.tables.homepage;

/**
 * <首页中的供货信息表结构>
 * @author  王乾州
 * @createon Jun 2, 2015
 */
public interface ProductTable
{
    /**
     * 主键
     */
    final String _ID = "_id";

    /**
     * 商品的SKU
     */
    final String GOODSSKU = "goodsSku";
    
    /**
     * 商品名称
     */
    final String GOODSTITLE = "goodsTitle";
    
    /**
     * 店铺地址
     */
    final String SHOPDETAILEDADDRESS = "shopDetailedAddress";
    
    /**
     * 直通车标记
     * 0:是, 1:否
     */
    final String DIRECTFLAG = "directFlag";
    
    /**
     * 销售量
     */
    final String SALESNUM = "salesNum";
    
    /**
     * 商品最高价
     */
    final String MAXPRICE = "maxPrice";
    
    /**
     * 商品最低价
     */
    final String MINPRICE = "minPrice";
    
    /**
     * 销售单位
     */
    final String SALEUNIT = "saleUnit";
    
    /**
     * 商品标签
     */
    final String LABELLIST = "labelList";
}