<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <!-- 整体透明画布 -->

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <!-- 扫描取景框 -->

    <com.alnton.myFrameResource.view.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px88"
        android:layout_gravity="top"
        android:background="@color/white" >

        <!-- 返回按钮 -->
		<!-- 返回按钮 -->

    <com.alnton.myFrameResource.view.Button.ClickEffectButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/back_arrow_black_88" />

        <!-- 标题 -->

<!-- 标题 -->

    <com.alnton.myFrameResource.view.Marquee.MarqueeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="45dip"
        android:layout_marginRight="45dip"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/scan"
        android:textColor="@color/typeface_five"
        android:textSize="@dimen/size36" />
    </RelativeLayout>

</merge>