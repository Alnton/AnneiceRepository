<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bg" >

    <!-- 返回按钮 -->

    <com.alnton.myFrameResource.view.Button.ClickEffectButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/back_btn" />

    <!-- 右边的文字 -->

    <TextView
        android:id="@+id/rightTextView"
        style="@style/white_28"
        android:layout_width="40dip"
        android:layout_height="25dip"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:text="@string/cancel" />

    <!-- 搜索宝贝区域 -->
    <EditText
        android:id="@+id/searchBabyEditText"
        android:layout_width="match_parent"
        android:layout_height="32dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/rightTextView"
        android:layout_toRightOf="@id/backButton"
        android:background="@drawable/input_bg"
        android:hint="@string/search_hint"
        android:paddingLeft="10dip"
        android:paddingRight="50dip"
        android:singleLine="true"
        android:textColor="@color/typeface_seven"
        android:textSize="@dimen/size28"
        android:textColorHint="@color/typeface_eight" />

    <!-- 删除按钮 -->
    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignBottom="@id/searchBabyEditText"
        android:layout_alignRight="@id/searchBabyEditText"
        android:layout_alignTop="@id/searchBabyEditText"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:paddingRight="5dip"
        android:visibility="invisible"
        android:src="@drawable/input_delete" />

</RelativeLayout>