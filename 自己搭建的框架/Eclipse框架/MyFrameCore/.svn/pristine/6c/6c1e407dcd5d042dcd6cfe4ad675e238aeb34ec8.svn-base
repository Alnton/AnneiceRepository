package com.alnton.myFrameCore.util;

import android.util.Log;

/**
 * <调试程序时的打印日志 工具>
 * @author  王乾州
 * @createon 2014年4月18日
 */
public class DebugLogUtil
{
    public static boolean ISDEBUG = true;
    
    public static String TAG = "Alnton";
    
    /**
    * <打印日志 verbose>
    * @param tag
    * @param msg
    */
    public static void v(String tag, String msg)
    {
        if (ISDEBUG)
            Log.v(tag, msg);
    }
    
    /**
     * 
     * <打印日志 error>
     * @param tag
     * @param msg
     */
    public static void e(String tag, String msg)
    {
        if (ISDEBUG)
            Log.e(tag, msg);
    }
    
    /**
     * 
     * <打印日志 debug>
     * @param tag
     * @param msg
     */
    public static void d(String tag, String msg)
    {
        if (ISDEBUG)
            Log.d(tag, msg);
    }
    
    /**
     * 
     * <打印日志 info>
     * @param tag
     * @param msg
     */
    public static void i(String tag, String msg)
    {
        if (ISDEBUG)
            Log.i(tag, msg);
    }
}